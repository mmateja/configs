# ~/.gitconfig

# Place personal info in ~/.gitconfig-local
# [user]
# 	name = <user name>
# 	email = <mail>

[include]
	path = .gitconfig-local
[core]
	autocrlf = input	# delete Windows line endings on commit
	editor = vim
[color]
	ui = true
[merge]
	tool = meld
	ff = false
[alias]
	tree = log --graph --oneline --all --pretty=format:"%C(yellow)%h%Cred%d\\ %Creset%s%Cblue\\ [%cn]%Cred"
	ls = log --pretty=format:"%C(yellow)%h%Cred%d\\ %Creset%s%Cblue\\ [%cn]"
	ll = log --pretty=format:"%C(yellow)%h%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --numstat
	lds = log --pretty=format:"%C(yellow)%h\\ %ad%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --date=relative
[push]
	default = current
[pull]
	ff = only

